{{> nav }}
<div class="row">
    <form action="/login" method="post">
        <div class="row">
            <div class="form-group col col-sm-12">
                <input type="email" name="email" class="validate" value="test@example.com">
                <label for="email">Email</label>
            </div>
        </div>
        <div class="row">
            <div class="form-group col col-sm-12">
                <input type="password" name="password" class="validate" value="aaaaaaaa" required aria-required="true">
                <label for="password">Password</label>
            </div>
        </div>
        <input type="submit" id="login-btn" class="btn waves-effect waves-light" value="Login">
    </form>
</div>
{{#if message}}
<div class="alert">{{message}}</div>
{{/if}}
